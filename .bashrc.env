#
# History Management
#
export HISTTIMEFORMAT="[%Y] - %a, %d %b, %H:%M - "
export HISTFILESIZE="-1"
export HISTSIZE="99999"
export HISTCONTROL="ignoredups:erasedups"
export PROMPT_COMMAND="history -a;log_bash_persistent_history;date +%H:%M-%a_%d; resize >/dev/null;"
#export HISTIGNORE=":doneDate *"

#
## PRINT SHELL COLORS
#
export DEFAULT="\e[0m";
export BOLD="\e[1m";
export BLACK="\e[30m";
export NOTBOLD="\e[22m";
export RED="\e[31m";
export GREEN="\e[32m";
export YELLOW="\e[33m";
export BLUE="\e[34m";
export PINK="\e[35m";
export CYAN="\e[36m"
export WHITE="\e[37m";
export UNDERLINE="\e[4m";
export BLINK="\e[5m";
export INVERSE="\e[7m";

export LESS="-R -M -I -F -X -x4 -q"
export EDITOR=emacs

#
## Bash Settings Config
#
shopt -s expand_aliases
shopt -s histappend
shopt -s nocasematch
#shopt -s nocaseglob
shopt -s checkwinsize
shopt -u dotglob
shopt -s no_empty_cmd_completion
shopt -s shift_verbose
shopt -s histappend
shopt -s expand_aliases
export IGNOREEOF=1
