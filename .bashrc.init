#
# .bashrc.init
#

DEFAULT="\e[0m";
GREEN="\e[32m";
CYAN="\e[36m";

function isInteractiveShell()
{
  if [[ $- =~ i ]]
  then
      return 0
  else
      return -1
  fi
  
}

function logPrint()
{
    if isInteractiveShell 
    then
        echo -e $*$DEFAULT;
    fi
}

function isSuse()
{
    grep -qi suse /etc/os-release
}

function isBsd()
{
  uname -a | egrep -iq bsd 
}

export -f logPrint isBsd isSuse isInteractiveShell

logPrint "${GREEN}Read bashrc.init$DEFAULT"

