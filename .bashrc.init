DEFAULT="\e[0m";
BOLD="\e[1m";
UNBOLD="\e[22m";
NOTBOLD="\e[22m";
RED="\e[31m";
GREEN="\e[32m";
YELLOW="\e[33m";
BLUE="\e[34m";
PINK="\e[35m";
CYAN="\e[36m";

function isInteractiveShell()
{
  if [[ $- =~ i ]]
  then
      return 0
  else
    return -1
  fi
  
}

function logPrint()
{
    if isInteractiveShell 
    then
        echo -e $*$DEFAULT;
    fi
}

function isSuse()
{
    grep -qi suse /etc/os-release
}

function isBsd()
{
  uname -a | egrep -iq bsd 
}

export -f logPrint isBsd isSuse isInteractiveShell

logPrint "${GREEN}Reading bashrc.init$DEFAULT"

